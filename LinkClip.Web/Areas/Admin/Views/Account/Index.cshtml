@using LinkClip.Domain.ViewModels.Account
@model List<UserForShowViewModel>
@{
    ViewData["Title"] = "User Management";
}
<div class="d-flex d-flex justify-content-between">
    <h2 class="text-light">
        @ViewData["Title"]
    </h2>
    <a class="btn btn-bd-primary justify-content-end text-center" asp-area="Admin" asp-controller="Account" asp-action="CreateUser">Add</a>
</div>



<hr class="text-light mb-5"/>
@if (Model != null && Model.Any())
{
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>UserId</th>
                <th>Name</th>
                <th>LastName</th>
                <th>Mobile</th>
                <th>IsAdmin?</th>
                <th>IsBlocked?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var user in Model)
            {
                <tr>

                    <td>@user.UserId</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Mobile</td>
                    <td>
                        @if (user.IsAdmin)
                        {
                            <p class="text-success">Yes</p>
                        }
                        else
                        {
                            <p class="text-danger">No</p>
                        }
                    </td>
                    <td>
                        @if (user.IsBlocked)
                        {
                            <p class="text-danger">Yes</p>
                        }
                        else
                        {
                            <p class="text-success">No</p>
                        }
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Account" asp-action="EditUser" asp-route-userId="@user.UserId" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }



        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <p>Nothing To Show !</p>
    </div>
}

