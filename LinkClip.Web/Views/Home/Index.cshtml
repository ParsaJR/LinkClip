<main class="">
    <form class="banner-form" asp-controller="Home" asp-action="Index" method="post">
    <div class="h-75 d-flex align-items-center justify-content-center flex-column">
        <p class="lead">Paste the URL</p>
            <input asp-for="OriginalUrl" type="text" class="link-input">
            <button type="submit" class="mt-4 custombtn">Shorten</button>
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success mt-5 d-flex justify-content-center align-items-center flex-column m-2" role="alert">
                @ViewBag.UserShortLink
                <br/>
                    <button type="button" class="btn btn-primary text-center" onclick="CopyToClipboard('@ViewBag.UserShortLink')">Copy</button>
            </div>
        }
        <p class="lead mt-5 p-4">LinkClip is a free tool to shorten URLs and generate short links</p>
    </div>
    </form>

</main>