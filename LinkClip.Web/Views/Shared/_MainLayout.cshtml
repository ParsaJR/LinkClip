<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <partial name="_HeaderRefrence" />
    <title>@ViewData["Title"] - Linkclip</title>
</head>

<body>
    <header>
        <div class="container">
            <div class="logo p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <a href="/" class="fw-bold display-5 header hvr-grow">LinkClip</a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Login" class="loginbtn hvr-underline-from-left">Login/Register</a>
                    }
                    else
                    {
                        <div>
                            <a class="loginbtn hvr-underline-from-left" style="cursor:pointer;">@User.Identity.Name <a asp-controller="Account" asp-action="Logout" class="loginbtn hvr-underline-from-left">Logout</a></a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </header>
    @RenderBody()
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">

            <p class="col-md-4 mb-0">© 2023 ParsaJR</p>

            <a href="/"
               class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32">
                    <use xlink:href="#bootstrap"></use>
                </svg>
            </a>

            <ul class="nav col-md-4 justify-content-end">

                <li class="nav-item"><a href="https://github.com/ParsaJR" class="nav-link px-2">Github</a></li>
            </ul>

        </footer>
    </div>

    <partial name="_FooterRefrence" />
    @RenderSection("scripts",false)
</body>

</html>

